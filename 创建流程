#配置文件application.properties
#port
server.port=8889
#path
server.servlet.context-path=/

#tomcat jdbc
spring.datasource.url=jdbc:mysql://localhost:3306/db_blog_vl?serverTimezone=GMT%2B8&userUnicode=true*characterEncoding=utf-8
spring.datasource.username=root
spring.datasource.password=123456
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
#tomcat jdbc

#上传文件大小
spring.servlet.multipart.maxFileSize=20MB
spring.servlet.multipart.maxRequesSize=20MB
#上传文件大小

#jpa Jpa
# ddl-auto：定义数据表的生成策略。update：更新或者创建数据表结构
spring.jpa.hibernate.ddl-auto=update
#控制台显示sql语句
spring.jpa.show-sql=true
spring.jpa.database-platform=org.hibernate.dialect.MySQLInnoDBDialect
#jpa Jpa default=MyISAM---InnoDB

#thymeleaf config
#页面热加载
spring.thymeleaf.cache=false
spring.freemarker.suffix=.html
spring.freemarker.cache=false
spring.freemarker.charset=UTF-8
#thymeleaf config

#lucene setting
# /home/lucene/java456_blog
# C://lucene//java456_blog
lucene.path=C://lucene//java456_blog
#lucene setting


pom.xml管理meven依赖  JSON
删除依赖 test

springboot jpa作用  自动生成数据库所需要的表




